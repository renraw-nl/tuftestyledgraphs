# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = LF
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 79
tab_width = 4

[Makefile]
indent_style = tab

[*.{markdown,md,Rmd,qmd,pymd}]
trim_trailing_whitespace = false

[*.{yaml,yml,toml,json,js,css,html}]
indent_size = 2
end_of_line = LF

[*.{bat,vbs,ps1}]
end_of_line = CRLF
